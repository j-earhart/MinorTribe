@model IEnumerable<MinorTribe.Models.Product>

@{
	ViewData["Title"] = "Shop Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Arrivals</h2>



<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<img src="~/images/product-image-coming-soon.png" />
				<div class="caption">
					<h3>Name: @Html.DisplayFor(modelItem => item.Name)</h3>
					<p>Price: @Html.DisplayFor(modelItem => item.Price)</p>

					<p>
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Add to Cart</a> |
						<a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Details</a> |
					</p>
				</div>
			</div>
		</div>
	}
</div>

