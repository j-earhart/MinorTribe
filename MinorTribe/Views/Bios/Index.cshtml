@model IEnumerable<MinorTribe.Models.Bio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-area="" asp-controller="Home" asp-action="Index">
	<img src="~/images/MinorTribeWht.png" class="img-responsive thumbnail minorTribeLogo " />
</a>
<p>
    <a asp-action="Join Our Tribe">Create New</a>
</p>
<table class="table">
    <thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Movie)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Food)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SuperHero)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ImageUpload)
			</th>
			<th></th>
		</tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
		<tr>
			<th>
				@Html.DisplayFor(model => item.Name)
			</th>
			<th>
				@Html.DisplayFor(model => item.Email)
			</th>
			<td>
				@Html.DisplayFor(modelItem => item.Movie)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Food)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SuperHero)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ImageUpload)
			</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
				<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
				<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
			</td>
		</tr>
}
    </tbody>
</table>
